include ../components/menu/menu
include ../components/mobile/mobile

.main__aside.col-lg-1
	.main__logo
		include ../components/left-sidebar/left-sidebar
.main__contents
	.app
		.app__content
			.layout.app__layout
				.layout__content
					.layout__header
						.header__content
							+mobile()
							ul.header__menu.menu
								each item in menu
									li.header__menu-item
										a.header__menu-link.layout__link-color(href=item.link) #{item.text}
					.layout__hero
						.layout__present
							.present__wrapper.present__onboarding-picture
								.order__hero
									include ../components/hero/hero
				.layout__onboarding.panel__bg
					include ../components/panel-order/panel-order
.main__sidebar.col-lg-1
	include ../components/right-sidebar/right-sidebar